@model BookShop.Models.Company

@{
    ViewData["Title"] = Model.CompanyId == 0 ? "Create Product" : "Edit Product";
    var title = Model.CompanyId == 0 ? "Create Product" : "Edit Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class = "container py-4">
    <div class = "card shadow border-0 rounded-4">
        <div class = "card-header bg-gradient-primary-to-secondary rounded-top-4 py-4">
            <h2 class = "text-center text-white mb-0">
                <i class = "fas fa-book me-2"></i> @title
            </h2>
        </div>
        <div class = "card-body bg-white rounded-bottom-4">
            <form method = "post" enctype = "multipart/form-data">
                <div asp-validation-summary = "ModelOnly" class = "text-danger mb-3"></div>
                <input type = "hidden" asp-for = "CompanyId"/>
                <div class = "form-group row mb-4">
                    <div class = "col-4 d-flex align-items-center">
                        <label asp-for = "CompanyName" class = "mb-0">Tên công ty</label>
                    </div>
                    <div class = "col-8">
                        <input asp-for = "CompanyName" class = "form-control"/>
                        <span asp-validation-for = "CompanyName" class = "text-danger"></span>
                    </div>
                </div>
                <div class = "form-group row mb-4">
                    <div class = "col-4 d-flex align-items-center">
                        <label asp-for = "Street" class = "mb-0">Tên đường</label>
                    </div>
                    <div class = "col-8">
                        <input asp-for = "Street" class = "form-control"/>
                        <span asp-validation-for = "Street" class = "text-danger"></span>
                    </div>
                </div>
                <div class = "form-group row mb-4">
                    <div class = "col-4 d-flex align-items-center">
                        <label asp-for = "City" class = "mb-0">Thành phố</label>
                    </div>
                    <div class = "col-8">
                        <input asp-for = "City" class = "form-control"/>
                        <span asp-validation-for = "City" class = "text-danger"></span>
                    </div>
                </div>
                <div class = "form-group row mb-4">
                    <div class = "col-4 d-flex align-items-center">
                        <label asp-for = "Country" class = "mb-0">Quốc gia</label>
                    </div>
                    <div class = "col-8">
                        <input asp-for = "Country" class = "form-control"/>
                        <span asp-validation-for = "Country" class = "text-danger"></span>
                    </div>
                </div>
                
                <div class = "form-group row mb-4">
                    <div class = "col-4 d-flex align-items-center">
                        <label asp-for = "PhoneNumber" class = "mb-0">Số điện thoại</label>
                    </div>
                    <div class = "col-8">
                        <input asp-for = "PhoneNumber" class = "form-control"/>
                        <span asp-validation-for = "PhoneNumber" class = "text-danger"></span>
                    </div>
                </div>

                <div class="form-group row mb-4">
                    <div class="col-4 d-flex align-items-center">
                        <label asp-for="IsAuthorizedCompany" class="mb-0">Được ủy quyền</label>
                    </div>
                    <div class="col-8 d-flex align-items-center">
                        <input asp-for="IsAuthorizedCompany" class="form-check-input me-2" type="checkbox" />
                        <span asp-validation-for="IsAuthorizedCompany" class="text-danger"></span>
                    </div>
                </div>
                @* <div class = "form-group row mb-4"> *@
                @*     <input type = "hidden" asp-for = "LogoImg"/> *@
                @*     <div class = "col-4 d-flex align-items-center"> *@
                @*         Hình ảnh *@
                @*     </div> *@
                @*     <div class = "col-8"> *@
                @*         <input type = "file" name = "files" id = "uploadBox" multiple class = "form-control"/> *@
                @*     </div> *@
                @* </div> *@

                <div class = "form-group row">
                    <div class = "col-8 offset-4">
                        @if (Model.CompanyId != 0)
                        {
                            <partial name = "_EditAndBlackListButton" model = "Model.CompanyId"/>
                        }
                        else
                        {
                            <partial name = "_CreateAndBlackListButton"/>
                        }
                    </div>
                </div>
            </form>
            @* @if (Model.CompanyId != 0) *@
            @* { *@
            @*     <div class = "mt-4 text-center"> *@
            @*         <img src = "@Model.LogoImg" width = "240px" height = "360px" style = "border-radius: 5px;border: 1px solid #bbb9b9" alt = "Responsive image"> *@
            @*     </div> *@
            @* } *@
        </div>
    </div>
</div>

