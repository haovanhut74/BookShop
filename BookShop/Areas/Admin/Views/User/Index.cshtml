@{
    ViewData["Title"] = "Quản lý danh mục";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class = "container py-4">
    <div class = "card shadow border-0 rounded-4">
        <div class = "card-header bg-gradient-primary-to-secondary rounded-top-4 py-4">
            <h1 class = "text-center text-white mb-0">
                <i class = "fas fa-layer-group me-2"></i> Quản Lý Danh Mục
            </h1>
        </div>
        <div class = "card-body bg-white rounded-bottom-4">
            <div class = "d-flex justify-content-between align-items-center mb-4">
                <h3 class = "mb-0 text-primary fw-bold d-flex align-items-center">
                    <i class = "fas fa-list-ul me-2"></i>
                    Danh sách danh mục
                </h3>
                <a
                    asp-area = "Identity" asp-page = "/Account/Register"
                    class = "btn btn-success shadow-sm d-flex align-items-center gap-2" title = "Thêm mới"
                >
                    <i class = "fas fa-plus-circle"></i><span>Thêm mới tài khoản</span>
                </a>
            </div>
            <div class = "table-responsive rounded-3 shadow-sm">
                <table class = "table table-hover align-middle mb-0" id = "tblData" style = "overflow: hidden;">
                    <thead>
                    <tr class = "bg-primary text-white">
                        <th class = "ps-4 py-3">
                            Tên tài khoản
                            <button class = "btn-sort-alpha" title = "Sắp xếp ABC">
                                <i class = "fas fa-sort-alpha-down"></i>
                            </button>
                        </th>
                        <th class = "ps-4 py-3">
                            Phone
                        </th>
                        <th class = "ps-4 py-3">
                            Công ty / đại lý
                        </th>
                        <th class = "ps-4 py-3">
                            Role
                        </th>
                        <th class = "text-center py-3" style = "width:140px;">Thao tác</th>
                    </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @section Scripts{
        <script src = "~/js/User.js" asp-append-version = "true"></script>
    }
</div>